<?xml version="1.0" encoding="utf-8"?>



<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="15dp" >
    
   <FrameLayout
            android:id="@+id/fragmentGPS"
            android:layout_width="match_parent"
            android:layout_height="0px"
            android:layout_weight="1">
    </FrameLayout> 

    <TextView
        android:id="@+id/TextView01"
        style="@style/ConfigCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Минимальная точность определения местоположения" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:padding="15dp" >

        <Spinner
            android:id="@+id/spinMinAccuracy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/Location_Accuracy"/>
        <TextView
            android:id="@+id/textView2"
            style="@style/ConfigCaption"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Таймаут" />

        <Spinner
            android:id="@+id/spinMapProvider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" 
            android:entries="@array/LocAccTimeouts"/>

        <CheckBox
            android:id="@+id/checkDownloadAGPS"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:enabled="false"
            android:text="@string/GPSTab_DownloadAGPSCheckbox_Caption" />

    </LinearLayout>

</LinearLayout>